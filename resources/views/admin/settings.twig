{% extends 'inc/admin_layout.twig' %}
{% block body %}
    <div class="panel-body">
        <form action="/admin/settings" method="post">
            <input type="hidden" name="_token" value="{{ csrf_token }}">
            {% for setting in settings %}
                <div class="col-sm-12" style="padding-top: 5px;">
                    <div class="col-sm-3">{{ setting.key }}</div>
                    <div class="col-sm-7"><input class="form-control" type="text" name="updated[{{ setting.key }}]" value="{{ setting.value }}"></div>
                </div>
            {% endfor %}
            <div class="col-sm-10">&nbsp;</div>
            <div class="col-sm-2"><button class="btn btn-primary">Edit settings</button></div>
        </form>
    </div>
    <div class="col-sm-12">
        <div class="col-sm-3">Key</div>
        <div class="col-sm-9">Value</div>
        <form action="/admin/settings" method="post">
            <input type="hidden" name="_token" value="{{ csrf_token }}">
            <div class="col-sm-3"><input class="form-control" type="text" name="new[key]"></div>
            <div class="col-sm-7"><input class="form-control" type="text" name="new[value]"></div>
            <div class="col-sm-2"><button class="btn btn-default">Add new</button></div>
        </form>
    </div>
{% endblock %}